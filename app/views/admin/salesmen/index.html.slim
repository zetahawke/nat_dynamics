span.card-title
  h5 Listing salesmen
.card-content
  br/
  span.fs-18 Gr√°ficos de ventas

  = bar_chart Salesman.all_media_percent

  br/

  table
    thead
      tr
        th Name
        th
        th
        th

    tbody
      - @salesmen.each do |salesman|
        tr
          td = salesman.name
          td = link_to 'Show', admin_salesman_path(salesman)
          td = link_to 'Edit', edit_admin_salesman_path(salesman)
          td = link_to 'Destroy', admin_salesman_path(salesman), data: { confirm: 'Are you sure?' }, method: :delete

  br

.card-actions
  = link_to 'New Salesman', new_admin_salesman_path, class: 'btn btn-primary'
