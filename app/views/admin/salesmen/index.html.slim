span.card-title
  h5 Listando Vendedores
.card-content
  br/
  .row
    span.fs-18 Gráficos
    p
      | Gráfico de cumplimiento de los vendedores.
  

  = render 'graphic'
  br/

  table
    thead
      tr
        th Nombre
        th Indicador de cumplimiento encuestas
        th Indicador de cumplimiento ventas
        th
        th
        th

    tbody
      - @salesmen.each do |salesman|
        tr
          td = salesman.name
          td
            .traffic-light
              .small-light style="background-color: #{salesman.traffic_light_for(params[:type], params[:date], 'goals')}"
          td
            .traffic-light
              .small-light style="background-color: #{salesman.traffic_light_for(params[:type], params[:date], 'money_goals')}"
          td = link_to 'Mostrar', admin_salesman_path(salesman)
          td = link_to 'Editar', edit_admin_salesman_path(salesman)
          td = link_to 'Eliminar', admin_salesman_path(salesman), data: { confirm: 'Are you sure?' }, method: :delete

  br

.card-action
  = link_to 'Nuevo Vendedor', new_admin_salesman_path, class: 'btn btn-primary'
